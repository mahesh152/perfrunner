[test_case]
test = perfrunner.tests.elastic.ElasticThroughputTest
title = Med Term, wiki 1M x 1KB, 1K sets/sec kv load
component = fts
category = kvthroughput

[fts]
items = 1000000
name  = perf_elastic_index
port = 9091
worker= 50
type = term
query_file = tests/fts/data/med.txt
query_size = 10
elastic = 1
logfile = /tmp/elastic_throughput_term_med_1M_1K.txt
orderby = q0b00000010
backup_path = /home/backup
repo_path = fts_wiki
field = text
index_configfile = tests/fts/index/elastic_6shards.json

[access]
time = 600
fts_updates = 100
workers = 2
throughput = 1000

[cluster]
mem_quota = 51024
initial_nodes = 1
num_buckets = 1
