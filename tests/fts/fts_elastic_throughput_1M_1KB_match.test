[test_case]
test = perfrunner.tests.elastic.ElasticThroughputTest
title = PhraseQuery, no kv-load, wiki 1M x 1KB
summary = ELasticSearch throughput test
larger_is_better = true

[fts]
items = 1000000
name  = perf_fts_index
port = 8094
worker= 10
type = match
query_file = /tests/fts/data/phrase.txt
query_size = 10
logfile = /tmp/elastic_throughput_matchphrase_1M_1K.txt
orderby = q0b00001101
elastic = 1
backup_path = /home/backup
repo_path = wiki1M
field = text

[access]
time = 600

[cluster]
mem_quota = 51024
initial_nodes = 1
num_buckets = 1