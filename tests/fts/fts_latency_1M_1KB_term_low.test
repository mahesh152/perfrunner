[test_case]
test = perfrunner.tests.fts.FTSLatencyTest
title = Low Term, no kv-load, wiki 1M x 1KB
summary = FTS latency Test
larger_is_better = false
fts = true


[access]
time = 1200


[cluster]
mem_quota = 51024
initial_nodes = 1
num_buckets = 1
fts_index_mem_quota = 20000


[fts]
items = 1000000
name  = perf_fts_index
port = 8094
worker= 2
type = term
query_file = perfrunner/tests/FTS/lowterm.txt
query_size = 10
logfile = /tmp/fts_latency_term_low_1M_1K.txt
orderby = q0b00000011
backup_path = /home/backup
repo_path = wiki1M
field = text