[test_case]
test = perfrunner.tests.fts.FTSThroughputTest
title =  TermDateFacets, no kv-load, wiki 1M x 1KB
summary = FTS throughput Test
larger_is_better = true
fts = true

[access]
time = 600

[cluster]
mem_quota = 51024
initial_nodes = 1
num_buckets = 1
fts_index_mem_quota = 20000

[fts]
items = 1000000
name  = perf_fts_index
port = 8094
worker= 6
type = facet
query_file = tests/fts/data/date.txt
query_size = 10
logfile = /tmp/fts_throughput_datefacet_1M_1K.txt
orderby = q0b00010000
backup_path = /home/backup
repo_path = datefacet
field = date
index_configfile = tests/fts/index/fts_vectors_off.json