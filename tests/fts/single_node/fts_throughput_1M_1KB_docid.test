[test_case]
test = perfrunner.tests.fts.FTSThroughputTest
title = DocIDQuery, no kv-load, wiki 1M x 1KB
component = fts
category = throughput

[access]
time = 600

[cluster]
mem_quota = 51024
initial_nodes = 1
num_buckets = 1
fts_index_mem_quota = 20000

[fts]
items = 1000000
name  = perf_fts_index
port = 8094
worker= 100
type = ids
query_file = tests/fts/data/docid.txt
query_size = 10
logfile = /tmp/fts_thput_docid_1M_1K.txt
orderby = q0b00010001
backup_path = /home/backup
repo_path = fts_wiki
field = text
index_configfile = tests/fts/index/fts_tvectors_off.json