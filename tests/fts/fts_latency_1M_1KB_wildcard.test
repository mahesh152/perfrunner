[test_case]
test = perfrunner.tests.fts.FTSLatencyTest
title =  WildcardQuery, no kv-load, wiki 1M x 1KB
summary = FTS Latency Test
larger_is_better = true
fts = true

[access]
time = 1200

[cluster]
mem_quota = 51024
initial_nodes = 1
num_buckets = 1
fts_index_mem_quota = 20000

[fts]
items = 1000000
name  = perf_fts_index
port = 8094
worker= 1
type = wildcard
query_file = tests/fts/data/wildcard.txt
query_size = 10
logfile = /tmp/fts_latency_wildcard_1M_1K.txt
orderby = q0b00001111
backup_path = /home/backup
repo_path = wiki1M
field = text
index_configfile = tests/fts/index/fts_vectors_off.json