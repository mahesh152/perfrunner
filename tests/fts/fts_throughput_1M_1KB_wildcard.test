[test_case]
test = perfrunner.tests.fts.FTSThroughputTest
title =  WildcardQuery, no kv-load, wiki 1M x 1KB
summary = FTS throughput Test
larger_is_better = true
fts = true

[access]
time = 600

[cluster]
mem_quota = 51024
initial_nodes = 1
num_buckets = 1
fts_index_mem_quota = 20000

[fts]
items = 1000000
name  = perf_fts_index
port = 8094
worker= 2
type = wildcard
query_file = /tests/fts/data/wildcard.txt
query_size = 10
logfile = /tmp/fts_thput_wildcard_1M_1K.txt
backup_path = /home/backup
repo_path = wiki1M
field = text
orderby = q0b00001111