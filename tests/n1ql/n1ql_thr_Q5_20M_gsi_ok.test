[test_case]
test = perfrunner.tests.n1ql.N1QLThroughputTest
title = Q5, Aggregation Query, FDB, not_bounded
component = n1ql
category = Q5_Q7_thr

[cluster]
mem_quota = 20480
index_mem_quota = 100000
initial_nodes = 6
num_buckets = 1

[secondary]
indexer.settings.storage_mode = forestdb
indexer.settings.wal_size = 40960
indexer.settings.gc_percent = 200

[load]
items = 20000000
size = 1024
workers = 80
doc_gen = reverse_lookup

[n1ql]
indexes =
    by_capped_small::CREATE INDEX {name} ON `{bucket}` (capped_small) using gsi;

[access]
creates = 0
reads = 80
updates = 20
deletes = 0
throughput = 18000
items = 20000000
workers = 20
time = 1200
n1ql_queries = aggregation-query
n1ql_workers = 96

[n1ql-aggregation-query]
prepared = aggregation_query
statement = SELECT sum(coins) FROM `bucket-1` WHERE capped_small=$1;
scan_consistency = not_bounded
args = ["{capped_small}"]
