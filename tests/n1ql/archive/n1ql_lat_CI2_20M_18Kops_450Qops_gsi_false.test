[test_case]
test = perfrunner.tests.n1ql.N1QLLatencyTest
title = CI2, Singleton Unique Lookup, 8K queries/sec, FDB, request_plus
component = n1ql

[cluster]
mem_quota = 20480
index_mem_quota = 100000
initial_nodes = 6
num_buckets = 1

[secondary]
indexer.settings.storage_mode = forestdb
indexer.settings.wal_size = 40960
indexer.settings.gc_percent = 200

[load]
items = 20000000
size = 1024
workers = 80
doc_gen = reverse_lookup

[n1ql]
indexes =
    by_email_name_street::CREATE INDEX {name} ON `{bucket}` (email,name,street) using gsi;

[access]
creates = 0
reads = 80
updates = 20
deletes = 0
throughput = 18000
items = 20000000
workers = 20
time = 1200
n1ql_queries = singleton-unique-lookup
n1ql_throughput = 450
n1ql_workers = 100

[n1ql-singleton-unique-lookup]
prepared = singleton_unique_lookup
statement = SELECT name AS _name, street AS _street  FROM `bucket-1` WHERE email = $1;
scan_consistency = request_plus
args = ["{email}"]"
