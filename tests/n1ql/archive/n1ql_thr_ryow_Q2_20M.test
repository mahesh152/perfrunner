[test_case]
test = perfrunner.tests.n1ql.N1QLThroughputTest
title = Q2 RYOW, Singleton Unique Lookup, 20M docs, 14.4KGops, 3.6KSops, GSI

[cluster]
mem_quota = 20480
index_mem_quota = 100000
initial_nodes = 6
num_buckets = 1

[load]
items = 20000000
size = 1024
workers = 40
doc_gen = reverse_lookup

[n1ql]
indexes =
    by_email::CREATE INDEX {name} ON `{bucket}` (email) using gsi;

[access]
creates = 0
reads = 80
updates = 20
deletes = 0
throughput = 18000
items = 20000000
workers = 20
time = 600
n1ql_queries = singleton-unique-lookup
n1ql_op = ryow
n1ql_throughput = 1000000
n1ql_workers = 1200

[n1ql-singleton-unique-lookup]
prepared = singleton_unique_lookup
statement = "SELECT * FROM `bucket-1` WHERE email="{}"";
args = ["{email}"]
time_sleep = 1
