[test_case]
test = perfrunner.tests.n1ql.N1QLLatencyTest
title = UP3, Key-Value Update, 20M docs, 14.4KGops, 3.6KSops, 20KQops
summary = Key-Value Update, 14.4KGops, 3.6KSops, 20KQops
larger_is_better = false

[cluster]
mem_quota = 20480
index_mem_quota = 100000
initial_nodes = 6
num_buckets = 1

[bucket]
replica_number = 1
password =
eviction_policy = valueOnly

[load]
items = 20000000
size = 1024
workers = 20
doc_gen = reverse_lookup
doc_partitions = 1

[access]
creates = 0
reads = 80
updates = 20
deletes = 0
throughput = 18000
items = 20000000
workers = 24
time = 1200
n1ql_op = update
n1ql_queries = key-value-update
n1ql_throughput = 20000
n1ql_workers = 240

[n1ql-key-value-update]
prepared = key_value_update
statement = UPDATE `bucket-1` USE KEYS [$1] set name = name||'_UPDATED';
args = ["{key}"]
