[test_case]
test = perfrunner.tests.n1ql.N1QLThroughputTest
title = Q2 RYOW, Singleton Unique Lookup, 20M docs, 30KSops, MOI
summary = Singleton Unique Lookup, 30KSops
larger_is_better = true

[cluster]
mem_quota = 20480
index_mem_quota = 100000
initial_nodes = 6
num_buckets = 1

[load]
items = 20000000
size = 1024
workers = 40
doc_gen = reverse_lookup
doc_partitions = 1

[n1ql]
indexes =
    by_email::CREATE INDEX {name} ON `{bucket}` (email);

[access]
creates = 0
reads = 0
updates = 100
deletes = 0
throughput = 30000
items = 20000000
workers = 20
time = 120
n1ql_queries = singleton-unique-lookup
n1ql_op = ryow
n1ql_throughput = 1000000
n1ql_workers = 1200

[n1ql-singleton-unique-lookup]
prepared = singleton_unique_lookup
statement = "SELECT * FROM `bucket-1` WHERE email="{}"";
args = ["{email}"]
time_sleep = 0.01
