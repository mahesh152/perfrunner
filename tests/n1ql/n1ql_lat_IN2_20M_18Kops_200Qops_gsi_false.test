[test_case]
test = perfrunner.tests.n1ql.N1QLLatencyTest
title = IN2, Range Insert, 20M docs, 14.4KGops, 3.6KSops, 200Qops, GSI, request_plus
summary = Range Insert, 14.4KGops, 3.6KSops, 200Qops
larger_is_better = false

[cluster]
mem_quota = 40960
index_mem_quota = 100000
initial_nodes = 6

[bucket]
replica_number = 1
password =
eviction_policy = valueOnly

[load]
items = 20000000
size = 1024
workers = 20
doc_gen = reverse_lookup
doc_partitions = 1

[n1ql]
indexes =
    by_capped_small::CREATE INDEX {name} ON `{bucket}` (capped_small) using gsi;

[access]
creates = 0
reads = 80
updates = 20
deletes = 0
throughput = 18000
items = 20000000
workers = 24
time = 1200
n1ql_op = rangedelete
n1ql_queries = rangeinsert
n1ql_throughput = 200
n1ql_workers = 720

[n1ql-rangeinsert]
prepared = rangeinsert
statement = INSERT INTO `bucket-2` (KEY doc_id, VALUE doc_val) SELECT meta(`bucket-1`).id AS doc_id, `bucket-1` as doc_val FROM `bucket-1` WHERE capped_small = $1;;
scan_consistency = request_plus
args = ["{capped_small}"]
