[test_case]
test = perfrunner.tests.n1ql.N1QLLatencyTest
title = Q3, Range Scan, 960 queries/sec, MOI, not_bounded
component = n1ql
category = Q1_Q3_lat

[stats]
lat_interval = 0.2

[cluster]
mem_quota = 20480
index_mem_quota = 100000
initial_nodes = 6
num_buckets = 1

[secondary]
indexer.settings.storage_mode = memory_optimized
indexer.settings.gc_percent = 200

[load]
items = 20000000
size = 1024
workers = 80
doc_gen = reverse_lookup

[n1ql]
indexes =
    by_capped_small::CREATE INDEX {name} ON `{bucket}` (capped_small) using gsi;

[access]
creates = 0
reads = 0
updates = 100
deletes = 0
throughput = 30000
items = 20000000
workers = 20
time = 1200
n1ql_queries = range-scan
n1ql_throughput = 960
n1ql_workers = 128

[n1ql-range-scan]
prepared = range_scan
statement = SELECT name AS _name, street AS _street FROM `bucket-1` WHERE capped_small=$1;
scan_consistency = not_bounded
args = ["{capped_small}"]
