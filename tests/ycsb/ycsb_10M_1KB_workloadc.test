[test_case]
test = perfrunner.tests.ycsb.YCSBTest
title = 1 bucket x 10M x 1KB
component = ycsb
category = workloadc

[cluster]
mem_quota = 54000
initial_nodes = 8
num_buckets = 1

[bucket]
eviction_policy = fullEviction

[compaction]
db_percentage = 2

[access]
time = 600
workers = 4

[ycsb]
sdk = couchbase2
bucket = couchbase.bucket=bucket-1
jvm-args = com.couchbase.connectTimeout=300000,com.couchbase.kvTimeout=60000
threads = 35
recordcount = 10000000
export_file_path = /tmp/ycsb_log/
export_file =  ycsb_log
path = /root/perfrunner-ycsb/YCSB
workload_path = /workloads/workloadc
size = 1024
operationcount = 10000000
