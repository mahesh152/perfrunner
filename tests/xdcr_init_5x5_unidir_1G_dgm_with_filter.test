[test_case]
test = perfrunner.tests.xdcr.XdcrInitTest
title = Avg. initial XDCR rate (items/sec), 5 -> 5 UniDir, 1 bucket x 1G x 1KB, Filter (matching ~50%% of the items)
component = xdcr
category = init

[stats]
monitored_processes = goxdcr

[cluster]
mem_quota = 204800
initial_nodes = 5 5
num_buckets = 1

[xdcr_cluster]
sourceNozzlePerNode = 4
targetNozzlePerNode = 64

[compaction]
db_percentage = 100
view_percentage = 100

[restore]
snapshot = /home/snapshots/1000M_800B

[load]
items = 1000000000
size = 800
workers = 80

[xdcr]
replication_type = unidir
filter_expression = 7
