summary = Range Scan, 14.4KGops, 3.6KSops, 200Qops
larger_is_better = false

[cluster]
mem_quota = 8048
index_mem_quota = 1000
initial_nodes = 3
num_buckets = 1


[secondary]
indexer.settings.storage_mode = forestdb
indexer.settings.compaction.min_size = 1048576
indexer.settings.persisted_snapshot.interval = 3000
indexer.settings.wal_size = 40960
indexer.settings.maxVbQueueLength = 10000
indexer.settings.max_cpu_percent = 2400
indexer.settings.scan_timeout = 0
indexer.settings.gc_percent = 200


[stats]
add_snapshots = 0
seriesly_host = 10.5.3.40

[bucket]
replica_number = 1
password =
eviction_policy = valueOnly

[load]
items = 1000000
size = 1024
workers = 20
doc_gen = reverse_lookup
doc_partitions = 1

[n1ql]
indexes =
    by_capped_small_name_street::CREATE INDEX {name} ON `{bucket}` (capped_small, name, street) using gsi;

[load]
items = 1000000
size = 1024
workers = 20
doc_gen = reverse_lookup
doc_partitions = 1

[access]
creates = 0
reads = 80
updates = 20
deletes = 0
throughput = 1000
items = 100000
workers = 24
time = 300
n1ql_queries = range-scan
n1ql_throughput = 200
