[test_case]
test = perfrunner.tests.n1ql.N1QLThroughputLatencyTest
title = N1QL Q2 Array Indexing 1Bux20Mx1K, Singleton Unique Lookup, 14.4KGops, 3.6KSops, GSI, stale=false, n1ql_throughput=1M
summary = Singleton Unique Lookup, 14.4KGops, 3.6KSops
larger_is_better = false

[cluster]
mem_quota = 3080
index_mem_quota = 1000
initial_nodes = 3
num_buckets = 1

[secondary]
indexer.settings.storage_mode = forestdb
indexer.settings.compaction.min_size = 1048576
indexer.settings.persisted_snapshot.interval = 3000
indexer.settings.wal_size = 40960
indexer.settings.maxVbQueueLength = 10000
indexer.settings.max_cpu_percent = 2400
indexer.settings.scan_timeout = 0
indexer.settings.gc_percent = 200

[bucket]
replica_number = 1
password =
eviction_policy = valueOnly

[load]
items = 1000000
size = 1024
workers = 20
doc_gen = reverse_lookup_array_indexing
doc_partitions = 1

[n1ql]
indexes =
    by_achievements::CREATE INDEX {name} ON `{bucket}`(DISTINCT ARRAY i FOR i IN achievements END) using gsi;

[access]
creates = 0
reads = 80
updates = 20
deletes = 0
throughput = 1000
items = 10000
workers = 24
time = 300
n1ql_queries = singleton-unique-lookup
n1ql_throughput = 200
n1ql_workers = 2

[n1ql-singleton-unique-lookup]
prepared = singleton_unique_lookup
statement = SELECT * FROM `bucket-1` WHERE ANY i IN achievements SATISFIES i = $1 END;
scan_consistency = request_plus
args = [{achievements[0]}]
